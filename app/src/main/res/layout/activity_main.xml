<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#50b7eff7"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#50b7eff7">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/outputAnswer"
            android:background="#50b7eff7"
            android:gravity="bottom|end"
            android:paddingRight="20dp"
            android:textSize="20sp"
            android:textColor="#50040404"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/output"
            android:background="#50b7eff7"
            android:hint="0"
            android:gravity="bottom|right"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:textSize="20sp"
            android:layout_alignParentEnd="true"
            android:editable="false"
            android:layout_weight="1"
            android:textColor="#50040404"
            android:textColorHint="#50040404"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check History"
            android:id="@+id/button"
            android:background="#50b7eff7"
            android:onClick="onClickHistory"
            android:textColor="#50040404"/>
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="4"
        android:rowCount="6"
        android:layout_weight="3"
        android:background="#50b7eff7">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="c"
            android:id="@+id/reset"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#b1d3ed"
            android:textSize="30sp"
            android:textColor="#50040404"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="1dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ans"
            android:id="@+id/ans"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#b1d3ed"
            android:textSize="30sp"
            android:textColor="#50040404"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="1dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;="
            android:id="@+id/back"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#b1d3ed"
            android:textSize="30sp"
            android:textColor="#50040404"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="1dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/add"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#65aed8"
            android:textSize="30sp"
            android:textColor="#50040404"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_margin="1dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/seven"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#b1d3ed"
            android:textSize="30sp"
            android:textColor="#50040404"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="1dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/eight"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#b1d3ed"
            android:textSize="30sp"
            android:textColor="#50040404"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="1dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/nine"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#b1d3ed"
            android:textSize="30sp"
            android:textColor="#50040404"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="1dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/substract"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#65aed8"
            android:textSize="30sp"
            android:textColor="#50040404"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_margin="1dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/four"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#b1d3ed"
            android:textSize="30sp"
            android:textColor="#50040404"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="1dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/five"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#b1d3ed"
            android:textSize="30sp"
            android:textColor="#50040404"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="1dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/six"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#b1d3ed"
            android:textSize="30sp"
            android:textColor="#50040404"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_margin="1dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:id="@+id/multiply"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#65aed8"
            android:textSize="30sp"
            android:textColor="#50040404"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_margin="1dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/one"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#b1d3ed"
            android:textSize="30sp"
            android:textColor="#50040404"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_margin="1dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/two"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#b1d3ed"
            android:textSize="30sp"
            android:textColor="#50040404"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_margin="1dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/three"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#b1d3ed"
            android:textSize="30sp"
            android:textColor="#50040404"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_margin="1dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:id="@+id/divide"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#65aed8"
            android:textSize="30sp"
            android:textColor="#50040404"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_margin="1dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/zero"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#65aed8"
            android:textSize="30sp"
            android:textColor="#50040404"
            android:layout_columnSpan="2"
            android:layout_rowSpan="1"
            android:layout_gravity="fill"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_margin="1dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:id="@+id/dot"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#65aed8"
            android:textSize="30sp"
            android:textColor="#50040404"
            android:layout_gravity="fill"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_margin="1dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:id="@+id/equalTo"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#65aed8"
            android:textSize="30sp"
            android:textColor="#50040404"
            android:layout_gravity="fill"
            android:layout_row="5"
            android:layout_column="3"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:layout_margin="1dp"/>

    </GridLayout>

</LinearLayout>